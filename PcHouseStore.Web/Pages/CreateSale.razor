@page "/sales/create"
@using PcHouseStore.Domain.Models
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@inject SaleService SaleService
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Create New Sale</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Create New Sale</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/sales">Sales</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Sale Information</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="sale" OnValidSubmit="@HandleValidSubmitAsync">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Customer</label>
                                    <select class="form-select" @bind="sale.CustomerId" required>
                                        <option value="0">Select Customer</option>
                                        @if (customers != null)
                                        {
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.CustomerId">@customer.Person?.FullName</option>
                                            }
                                        }
                                    </select>
                                    <ValidationMessage For="@(() => sale.CustomerId)" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Employee</label>
                                    <select class="form-select" @bind="sale.EmployeeId" required>
                                        <option value="0">Select Employee</option>
                                        @if (employees != null)
                                        {
                                            @foreach (var employee in employees)
                                            {
                                                <option value="@employee.EmployeeId">@employee.Person?.FullName</option>
                                            }
                                        }
                                    </select>
                                    <ValidationMessage For="@(() => sale.EmployeeId)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Total Amount</label>
                                    <InputNumber class="form-control" @bind-Value="sale.Total" placeholder="0.00"
                                        step="0.01" min="0" />
                                    <ValidationMessage For="@(() => sale.Total)" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Remaining Amount</label>
                                    <InputNumber class="form-control" @bind-Value="sale.Remaining" placeholder="0.00"
                                        step="0.01" min="0" />
                                    <ValidationMessage For="@(() => sale.Remaining)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Sale Type</label>
                                    <select class="form-select" @bind="sale.SaleType">
                                        <option value="@SaleType.Common">Common</option>
                                        <option value="@SaleType.Refurb">Refurb</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" @bind="sale.Status">
                                        <option value="@OrderStatus.Created">Created</option>
                                        <option value="@OrderStatus.InProgress">In Progress</option>
                                        <option value="@OrderStatus.Finished">Finished</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Important Notes</label>
                            <textarea class="form-control" @bind="sale.ImportantNotes" rows="3"
                                placeholder="Enter any important notes about this sale..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="oi oi-x"></i> Cancel
                            </button>

                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="oi oi-check"></i> Create Sale
                            </button>
                        </div>
                    </EditForm>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Sale Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Total:</strong> €@sale.Total.ToString("F2")
                    </div>
                    <div class="mb-2">
                        <strong>Remaining:</strong> €@sale.Remaining.ToString("F2")
                    </div>
                    <div class="mb-2">
                        <strong>Type:</strong> @sale.SaleType
                    </div>
                    <div class="mb-2">
                        <strong>Status:</strong> @sale.Status
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Sale sale = new Sale()
    {
        CompanyId = 1, // This should come from authentication context
        Total = 0,
        Remaining = 0,
        SaleType = SaleType.Common,
        Status = OrderStatus.Created,
        Created = DateTime.UtcNow
    };

    private List<Customer>? customers;
    private List<Employee>? employees;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
        await LoadEmployees();
    }

    private async Task LoadCustomers()
    {
        try
        {
            customers = (await CustomerService.GetCustomersAsync(1))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customers: {ex.Message}");
        }
    }

    private async Task LoadEmployees()
    {
        try
        {
            // For now, we'll create a mock list. In a real app, you'd have an EmployeeService
            employees = new List<Employee>
{
new Employee { EmployeeId = 1, Person = new Person { FirstName = "John", LastName = "Doe" } },
new Employee { EmployeeId = 2, Person = new Person { FirstName = "Jane", LastName = "Smith" } }
};
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading employees: {ex.Message}");
        }
    }
    private async Task HandleValidSubmitAsync()
    {
        isSubmitting = true;
        StateHasChanged();

        try
        {
            var createdSale = await SaleService.CreateSaleAsync(sale);
            if (createdSale != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sale created successfully!");
                Navigation.NavigateTo("/sales");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to create sale. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating sale: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/sales");
    }
}