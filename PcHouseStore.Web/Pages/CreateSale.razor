@page "/sales/create"
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Web.Models
@using PcHouseStore.Web.Services
@inject OrderService OrderService
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Create Retail Order</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Create Retail Order</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/sales">Retail Orders</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header"><h5>Order Information</h5></div>
                <div class="card-body">
                    <EditForm Model="orderModel" OnValidSubmit="HandleValidSubmitAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Customer</label>
                            <select class="form-select" @bind="orderModel.CustomerId" required>
                                <option value="">Select customer</option>
                                @if (customers != null)
                                {
                                    foreach (var customer in customers)
                                    {
                                        <option value="@customer.CustomerId">@(customer.PersonName ?? "N/A")</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Total Amount (?)</label>
                                    <InputNumber class="form-control" @bind-Value="orderModel.TotalAmount" step="0.01" min="0" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT Amount (?)</label>
                                    <InputNumber class="form-control" @bind-Value="orderModel.TotalVatAmount" step="0.01" min="0" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Balance Due (?)</label>
                                    <InputNumber class="form-control" @bind-Value="orderModel.BalanceDue" step="0.01" min="0" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Sales Channel</label>
                                    <select class="form-select" @bind="orderModel.SalesChannel">
                                        <option value="@SalesChannel.InStore">In Store</option>
                                        <option value="@SalesChannel.Online">Online</option>
                                        <option value="@SalesChannel.Phone">Phone</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" rows="3" @bind="orderModel.Notes" placeholder="Optional"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Create Order
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card">
                <div class="card-header"><h5>Order Summary</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5">Order Number</dt>
                        <dd class="col-7">@orderModel.OrderNumber</dd>

                        <dt class="col-5">Order Type</dt>
                        <dd class="col-7">@orderModel.OrderType</dd>

                        <dt class="col-5">Total</dt>
                        <dd class="col-7">?@orderModel.TotalAmount.ToString("F2")</dd>

                        <dt class="col-5">VAT</dt>
                        <dd class="col-7">?@orderModel.TotalVatAmount.ToString("F2")</dd>

                        <dt class="col-5">Balance Due</dt>
                        <dd class="col-7">?@orderModel.BalanceDue.ToString("F2")</dd>

                        <dt class="col-5">Placed At</dt>
                        <dd class="col-7">@orderModel.PlacedAt?.ToLocalTime().ToString("dd MMM yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateOrderRequest orderModel = new()
    {
        CompanyId = 1,
        CustomerId = null,
        OrderType = OrderType.Retail.ToString(),
        OrderNumber = $"RTL-{DateTime.UtcNow:yyyyMMddHHmmss}",
        Currency = "EUR",
        TotalAmount = 0m,
        TotalVatAmount = 0m,
        BalanceDue = 0m,
        Notes = null,
        CreatedByEmployeeId = 1,
        SalesChannel = SalesChannel.InStore,
        DeviceId = null,
        TechnicianId = null,
        CheckInNotes = null,
        EstimatedCompletion = null,
        PlacedAt = DateTime.UtcNow,
        WarrantyDays = null,
        Status = OrderStatus.Created,
        Lines = new List<OrderLineRequest>()
    };

    private List<CustomerResponse>? customers;
    private bool isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomersAsync();
    }

    private async Task LoadCustomersAsync()
    {
        try
        {
            customers = (await CustomerService.GetCustomersAsync(orderModel.CompanyId))?.ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to load customers: {ex.Message}");
        }
    }

    private async Task HandleValidSubmitAsync()
    {
        if (!orderModel.CustomerId.HasValue)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please select a customer.");
            return;
        }

        isSubmitting = true;
        StateHasChanged();

        try
        {
            // Ensure there is at least an empty lines collection
            if (orderModel.Lines == null)
            {
                orderModel.Lines = new List<OrderLineRequest>();
            }
            var created = await OrderService.CreateOrderAsync(orderModel);
            if (created != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Order created successfully.");
                Navigation.NavigateTo("/sales");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to create order.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating order: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/sales");
    }
}
