@page "/service-orders/create"
@using PcHouseStore.Domain.Models
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Web.Services
@inject ServiceOrderService ServiceOrderService
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Create New Service Order</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Create New Service Order</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/service-orders">Service Orders</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Service Order Information</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="serviceOrder" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Customer</label>
                                    <select class="form-select" @bind="serviceOrder.CustomerId" required>
                                        <option value="">Select Customer</option>
                                        @if (customers != null)
                                        {
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.CustomerId">@customer.Person?.FullName</option>
                                            }
                                        }
                                    </select>
                                    <ValidationMessage For="@(() => serviceOrder.CustomerId)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Employee</label>
                                    <select class="form-select" @bind="serviceOrder.EmployeeId" required>
                                        <option value="">Select Employee</option>
                                        @if (employees != null)
                                        {
                                            @foreach (var employee in employees)
                                            {
                                                <option value="@employee.EmployeeId">@employee.Person?.FullName</option>
                                            }
                                        }
                                    </select>
                                    <ValidationMessage For="@(() => serviceOrder.EmployeeId)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Device Brand</label>
                                    <input type="text" class="form-control" @bind="device.Brand"
                                        placeholder="e.g., Apple, Samsung" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Device Model</label>
                                    <input type="text" class="form-control" @bind="device.Model"
                                        placeholder="e.g., iPhone 13, Galaxy S21" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Serial Number</label>
                                    <input type="text" class="form-control" @bind="device.SerialNumber"
                                        placeholder="Device serial number" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Total Amount</label>
                                    <InputNumber class="form-control" @bind-Value="serviceOrder.Total"
                                        placeholder="0.00" step="0.01" min="0" />
                                    <ValidationMessage For="@(() => serviceOrder.Total)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Due Amount</label>
                                    <InputNumber class="form-control" @bind-Value="serviceOrder.Due" placeholder="0.00"
                                        step="0.01" min="0" />
                                    <ValidationMessage For="@(() => serviceOrder.Due)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" @bind="serviceOrder.Status">
                                        <option value="@OrderStatus.Created">Created</option>
                                        <option value="@OrderStatus.InProgress">In Progress</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Bad Sectors</label>
                                    <InputNumber class="form-control" @bind-Value="serviceOrder.BadSector"
                                        placeholder="0" min="0" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" @bind="serviceOrder.Note" rows="3"
                                placeholder="Enter any notes about this service order..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="oi oi-x"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="oi oi-check"></i> Create Service Order
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Service Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Device:</strong> @device.DisplayName
                    </div>
                    <div class="mb-2">
                        <strong>Total:</strong> €@serviceOrder.Total.ToString()
                    </div>
                    <div class="mb-2">
                        <strong>Due:</strong> €@serviceOrder.Due.ToString()
                    </div>
                    <div class="mb-2">
                        <strong>Status:</strong> @serviceOrder.Status
                    </div>
                    <div class="mb-2">
                        <strong>Bad Sectors:</strong> @serviceOrder.BadSector
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ServiceOrder serviceOrder = new()
    {
        CompanyId = 1, // This should come from authentication context
        Total = 0,
        Due = 0,
        Status = OrderStatus.Created,
        Created = DateTime.UtcNow,
        BadSector = 0
    };

    private Device device = new();

    private List<Customer>? customers;
    private List<Employee>? employees;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
        await LoadEmployees();
    }

    private async Task LoadCustomers()
    {
        try
        {
            customers = (await CustomerService.GetCustomersAsync(1))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customers: {ex.Message}");
        }
    }

    private async Task LoadEmployees()
    {
        try
        {
            // For now, we'll create a mock list. In a real app, you'd have an EmployeeService
            employees = new List<Employee>
{
new Employee { EmployeeId = 1, Person = new Person { FirstName = "John", LastName = "Doe" } },
new Employee { EmployeeId = 2, Person = new Person { FirstName = "Jane", LastName = "Smith" } }
};
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading employees: {ex.Message}");
        }
    }

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        StateHasChanged();

        try
        {
            // First create the device
            // In a real app, you'd have a DeviceService
            device.DeviceId = 1; // Mock ID
            serviceOrder.DeviceId = device.DeviceId;

            var createdServiceOrder = await ServiceOrderService.CreateServiceOrderAsync(serviceOrder);
            if (createdServiceOrder != null)
            {
                await JSRuntime.InvokeAsync<object>("alert", "Service order created successfully!");
                Navigation.NavigateTo("/service-orders");
            }
            else
            {
                await JSRuntime.InvokeAsync<object>("alert", "Failed to create service order. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeAsync<object>("alert", $"Error creating service order: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/service-orders");
    }
}