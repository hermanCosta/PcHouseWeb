@page "/service-orders/create"
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Domain.Models
@using PcHouseStore.Web.Models
@using PcHouseStore.Web.Services
@inject ServiceOrderService ServiceOrderService
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Create Service Order</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Create Service Order</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/service-orders">Service Orders</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header"><h5>Order Details</h5></div>
                <div class="card-body">
                    <EditForm Model="orderModel" OnValidSubmit="HandleValidSubmitAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Customer</label>
                            <select class="form-select" @bind="orderModel.CustomerId" required>
                                <option value="">Select customer</option>
                                @if (customers != null)
                                {
                                    foreach (var customer in customers)
                                    {
                                        <option value="@customer.CustomerId">@customer.Person.DisplayName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Total (?)</label>
                                    <InputNumber class="form-control" @bind-Value="orderModel.TotalAmount" step="0.01" min="0" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Balance Due (?)</label>
                                    <InputNumber class="form-control" @bind-Value="orderModel.BalanceDue" step="0.01" min="0" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Technician Notes</label>
                            <textarea class="form-control" rows="3" @bind="orderModel.CheckInNotes" placeholder="Describe the issue or work to be performed"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Estimated Completion</label>
                                    <InputDate class="form-control" @bind-Value="estimatedCompletion" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Warranty (days)</label>
                                    <InputNumber class="form-control" @bind-Value="orderModel.WarrantyDays" min="0" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Order Notes</label>
                            <textarea class="form-control" rows="3" @bind="orderModel.Notes"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Create Service Order
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card">
                <div class="card-header"><h5>Summary</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5">Order Number</dt>
                        <dd class="col-7">@orderModel.OrderNumber</dd>
                        <dt class="col-5">Status</dt>
                        <dd class="col-7">@orderModel.Status</dd>
                        <dt class="col-5">Total</dt>
                        <dd class="col-7">?@orderModel.TotalAmount.ToString("F2")</dd>
                        <dt class="col-5">Balance Due</dt>
                        <dd class="col-7">?@orderModel.BalanceDue.ToString("F2")</dd>
                        <dt class="col-5">Placed</dt>
                        <dd class="col-7">@orderModel.PlacedAt?.ToLocalTime().ToString("dd MMM yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateOrderRequest orderModel = new(
        CompanyId: 1,
        CustomerId: null,
        OrderType: OrderType.Service.ToString(),
        OrderNumber: $"SRV-{DateTime.UtcNow:yyyyMMddHHmmss}",
        Currency: "EUR",
        TotalAmount: 0m,
        TotalVatAmount: 0m,
        BalanceDue: 0m,
        Notes: null,
        CreatedByEmployeeId: 1,
        SalesChannel: null,
        DeviceId: null,
        TechnicianId: null,
        CheckInNotes: null,
        EstimatedCompletion: null,
        PlacedAt: DateTime.UtcNow,
        WarrantyDays: 90,
        Status: OrderStatus.Created,
        Lines: new List<OrderLineRequest>());

    private DateTime? estimatedCompletion;
    private List<Customer>? customers;
    private bool isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomersAsync();
    }

    private async Task LoadCustomersAsync()
    {
        try
        {
            customers = (await CustomerService.GetCustomersAsync(orderModel.CompanyId))?.ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to load customers: {ex.Message}");
        }
    }

    private async Task HandleValidSubmitAsync()
    {
        if (!orderModel.CustomerId.HasValue)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please select a customer.");
            return;
        }

        isSubmitting = true;
        StateHasChanged();

        try
        {
            var request = orderModel with
            {
                OrderType = OrderType.Service.ToString(),
                EstimatedCompletion = estimatedCompletion,
                Lines = new List<OrderLineRequest>()
            };

            var created = await ServiceOrderService.CreateServiceOrderAsync(request);
            if (created != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Service order created successfully.");
                Navigation.NavigateTo("/service-orders");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to create service order.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating service order: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/service-orders");
    }
}
