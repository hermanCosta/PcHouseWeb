@page "/service-orders"
@using PcHouseStore.Domain.Models
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Web.Services
@inject ServiceOrderService ServiceOrderService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Service Orders Management</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Service Orders Management</h2>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <button class="btn btn-primary" @onclick="CreateNewServiceOrder">
                        <i class="oi oi-plus"></i> New Service Order
                    </button>
                </div>
                <div class="d-flex gap-2">
                    <select class="form-select" @bind="selectedStatus" @bind:after="FilterByStatus" style="width: 200px;">
                        <option value="">All Statuses</option>
                        <option value="@OrderStatus.Created">Created</option>
                        <option value="@OrderStatus.InProgress">In Progress</option>
                        <option value="@OrderStatus.Fixed">Fixed</option>
                        <option value="@OrderStatus.NotFixed">Not Fixed</option>
                        <option value="@OrderStatus.Finished">Finished</option>
                        <option value="@OrderStatus.Picked">Picked</option>
                    </select>
                    <input type="text" class="form-control" placeholder="Search orders..." @bind="searchTerm" @onkeypress="OnSearchKeyPress" style="width: 300px;" />
                    <button class="btn btn-outline-secondary" @onclick="SearchServiceOrders">
                        <i class="oi oi-magnifying-glass"></i> Search
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="LoadServiceOrders">
                        <i class="oi oi-reload"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (serviceOrders?.Any() == true)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Customer</th>
                                        <th>Device</th>
                                        <th>Employee</th>
                                        <th>Total</th>
                                        <th>Due</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Finished</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in serviceOrders)
                                    {
                                        <tr>
                                            <td>@order.ServiceOrderId</td>
                                            <td>@(order.Customer?.Person?.FullName ?? "N/A")</td>
                                            <td>@(order.Device?.DisplayName ?? "N/A")</td>
                                            <td>@(order.Employee?.Person?.FullName ?? "N/A")</td>
                                            <td>€@order.Total.ToString()</td>
                                            <td>€@order.Due.ToString()</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(order.Status)">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>@order.Created.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@(order.Finished?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewServiceOrder(order.ServiceOrderId)">
                                                        <i class="oi oi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning" @onclick="() => EditServiceOrder(order.ServiceOrderId)">
                                                        <i class="oi oi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteServiceOrder(order.ServiceOrderId)">
                                                        <i class="oi oi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h4>No Service Orders Found</h4>
                    <p>There are no service orders to display. Create your first service order to get started.</p>
                    <button class="btn btn-primary" @onclick="CreateNewServiceOrder">Create New Service Order</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<ServiceOrder>? serviceOrders;
    private bool isLoading = true;
    private string searchTerm = "";
    private OrderStatus? selectedStatus;
    private long currentCompanyId = 1; // This should come from authentication context

    protected override async Task OnInitializedAsync()
    {
        await LoadServiceOrders();
    }

    private async Task LoadServiceOrders()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            serviceOrders = (await ServiceOrderService.GetServiceOrdersAsync(currentCompanyId))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading service orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchServiceOrders()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            await LoadServiceOrders();
            return;
        }

        isLoading = true;
        StateHasChanged();
        
        try
        {
            serviceOrders = (await ServiceOrderService.SearchServiceOrdersAsync(currentCompanyId, searchTerm))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching service orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task FilterByStatus()
    {
        if (selectedStatus == null)
        {
            await LoadServiceOrders();
            return;
        }

        isLoading = true;
        StateHasChanged();
        
        try
        {
            serviceOrders = (await ServiceOrderService.GetServiceOrdersByStatusAsync(currentCompanyId, selectedStatus.Value))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error filtering service orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchServiceOrders();
        }
    }

    private void CreateNewServiceOrder()
    {
        Navigation.NavigateTo("/service-orders/create");
    }

    private void ViewServiceOrder(long id)
    {
        Navigation.NavigateTo($"/service-orders/{id}");
    }

    private void EditServiceOrder(long id)
    {
        Navigation.NavigateTo($"/service-orders/{id}/edit");
    }

    private async Task DeleteServiceOrder(long id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", new object[] { "Are you sure you want to delete this service order?" }))
        {
            var success = await ServiceOrderService.DeleteServiceOrderAsync(id);
            if (success)
            {
                await LoadServiceOrders();
            }
        }
    }

    private string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Created => "bg-secondary",
            OrderStatus.InProgress => "bg-warning",
            OrderStatus.Fixed => "bg-success",
            OrderStatus.NotFixed => "bg-danger",
            OrderStatus.Finished => "bg-info",
            OrderStatus.Picked => "bg-primary",
            OrderStatus.Canceled => "bg-dark",
            OrderStatus.Refunded => "bg-light text-dark",
            _ => "bg-secondary"
        };
    }
}
