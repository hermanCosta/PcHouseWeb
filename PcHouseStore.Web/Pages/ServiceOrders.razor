@page "/service-orders"
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Web.Models
@using PcHouseStore.Web.Services
@inject ServiceOrderService ServiceOrderService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Service Orders</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Service Orders</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                            <li class="breadcrumb-item active">Service Orders</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <button class="btn btn-primary" @onclick="CreateNewServiceOrder">
                        <i class="oi oi-plus"></i> New Service Order
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center gap-3">
                        <input type="text" class="form-control" placeholder="Search service orders..." @bind="searchTerm" @bind:event="oninput">
                        <button class="btn btn-outline-secondary" @onclick="SearchServiceOrdersAsync">
                            <i class="oi oi-magnifying-glass"></i>
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="LoadServiceOrdersAsync">
                            <i class="oi oi-loop"></i>
                        </button>
                        <select class="form-select" style="width: 200px;" @bind="selectedStatus" @onchange="async _ => await LoadServiceOrdersAsync()">
                            <option value="">All Statuses</option>
                            @foreach (var status in Enum.GetValues<OrderStatus>())
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (serviceOrders != null && serviceOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Technician</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Placed</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in serviceOrders)
                                    {
                                    <tr>
                                        <td>@order.OrderNumber</td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.ServiceDetails?.TechnicianName ?? "Unassigned"</td>
                                        <td>?@order.TotalAmount.ToString("F2")</td>
                                        <td><span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span></td>
                                        <td>@order.PlacedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <button class="btn btn-sm btn-outline-info" @onclick="() => ViewServiceOrder(order.OrderId)" title="View">
                                                    <i class="oi oi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteServiceOrderAsync(order.OrderId)" title="Delete">
                                                    <i class="oi oi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="oi oi-wrench display-3 text-muted"></i>
                            <h4>No service orders found</h4>
                            <p class="text-muted">Create a service order to track repair work.</p>
                            <button class="btn btn-primary" @onclick="CreateNewServiceOrder">Create Service Order</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<OrderResponse>? serviceOrders;
    private string searchTerm = string.Empty;
    private OrderStatus? selectedStatus;
    private long currentCompanyId = 1;
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        await LoadServiceOrdersAsync();
    }

    private async Task LoadServiceOrdersAsync()
    {
        isLoading = true;
        StateHasChanged();
        try
        {
            serviceOrders = (await ServiceOrderService.GetServiceOrdersAsync(currentCompanyId, selectedStatus))?.ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to load service orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchServiceOrdersAsync()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            await LoadServiceOrdersAsync();
            return;
        }

        isLoading = true;
        StateHasChanged();
        try
        {
            serviceOrders = (await ServiceOrderService.SearchServiceOrdersAsync(currentCompanyId, searchTerm))?.ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to search service orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void CreateNewServiceOrder()
    {
        Navigation.NavigateTo("/service-orders/create");
    }

    private void ViewServiceOrder(long orderId)
    {
        Navigation.NavigateTo($"/service-orders/{orderId}");
    }

    private async Task DeleteServiceOrderAsync(long orderId)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this service order?");
        if (!confirm)
            return;

        try
        {
            var success = await ServiceOrderService.DeleteServiceOrderAsync(orderId);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Service order deleted successfully.");
                await LoadServiceOrdersAsync();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to delete service order.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error deleting service order: {ex.Message}");
        }
    }

    private static string GetStatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Created => "bg-secondary",
        OrderStatus.InProgress => "bg-info",
        OrderStatus.Ready => "bg-primary",
        OrderStatus.Completed => "bg-success",
        OrderStatus.Cancelled => "bg-danger",
        OrderStatus.Refunded => "bg-warning",
        _ => "bg-secondary"
    };
}
