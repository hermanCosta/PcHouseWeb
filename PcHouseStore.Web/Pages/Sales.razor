@page "/sales"
@using PcHouseStore.Domain.Enums
@using PcHouseStore.Web.Models
@using PcHouseStore.Web.Services
@inject OrderService OrderService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Retail Orders</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Retail Orders</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                            <li class="breadcrumb-item active">Retail Orders</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-flex gap-2">
                    <select class="form-select" style="width: 200px;" @bind="selectedOrderType" @bind:after="LoadOrdersAsync">
                        <option value="Retail">Retail Orders</option>
                        <option value="Refurb">Refurb Orders</option>
                        <option value="">All Orders</option>
                    </select>
                    <button class="btn btn-primary" @onclick="CreateNewOrder">
                        <i class="oi oi-plus"></i> New Order
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center gap-3">
                        <input type="text" class="form-control" placeholder="Search orders..." @bind="searchTerm" @bind:event="oninput">
                        <button class="btn btn-outline-secondary" @onclick="SearchOrdersAsync">
                            <i class="oi oi-magnifying-glass"></i>
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="LoadOrdersAsync">
                            <i class="oi oi-loop"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (orders != null && orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Total</th>
                                        <th>Balance Due</th>
                                        <th>Status</th>
                                        <th>Type</th>
                                        <th>Placed</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in orders)
                                    {
                                    <tr>
                                        <td>@order.OrderNumber</td>
                                        <td>@order.CustomerName</td>
                                        <td>?@order.TotalAmount.ToString("F2")</td>
                                        <td>?@order.BalanceDue.ToString("F2")</td>
                                        <td><span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span></td>
                                        <td><span class="badge @GetOrderTypeBadgeClass(order.OrderType)">@order.OrderType</span></td>
                                        <td>@order.PlacedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <button class="btn btn-sm btn-outline-info" @onclick="() => ViewOrder(order.OrderId)" title="View">
                                                    <i class="oi oi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteOrderAsync(order.OrderId)" title="Delete">
                                                    <i class="oi oi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="oi oi-cart display-3 text-muted"></i>
                            <h4>No orders found</h4>
                            <p class="text-muted">Create a new order to get started.</p>
                            <button class="btn btn-primary" @onclick="CreateNewOrder">Create Order</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<OrderResponse>? orders;
    private string searchTerm = string.Empty;
    private string selectedOrderType = OrderType.Retail.ToString();
    private long currentCompanyId = 1;
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrdersAsync();
    }

    private async Task LoadOrdersAsync()
    {
        isLoading = true;
        StateHasChanged();
        try
        {
            orders = (await OrderService.GetOrdersAsync(currentCompanyId, ParseOrderType(selectedOrderType)))?.ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to load orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchOrdersAsync()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            await LoadOrdersAsync();
            return;
        }

        isLoading = true;
        StateHasChanged();
        try
        {
            orders = (await OrderService.SearchOrdersAsync(currentCompanyId, searchTerm, ParseOrderType(selectedOrderType)))?.ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to search orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void CreateNewOrder()
    {
        Navigation.NavigateTo("/sales/create");
    }

    private void ViewOrder(long orderId)
    {
        Navigation.NavigateTo($"/sales/{orderId}");
    }

    private async Task DeleteOrderAsync(long orderId)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this order?");
        if (!confirm)
            return;

        try
        {
            var success = await OrderService.DeleteOrderAsync(orderId);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Order deleted successfully.");
                await LoadOrdersAsync();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to delete order.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error deleting order: {ex.Message}");
        }
    }

    private static OrderType? ParseOrderType(string? value)
    {
        if (Enum.TryParse<OrderType>(value, true, out var parsed))
        {
            return parsed;
        }
        return null;
    }

    private static string GetStatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Created => "bg-secondary",
        OrderStatus.InProgress => "bg-info",
        OrderStatus.Ready => "bg-primary",
        OrderStatus.Completed => "bg-success",
        OrderStatus.Cancelled => "bg-danger",
        OrderStatus.Refunded => "bg-warning",
        _ => "bg-secondary"
    };

    private static string GetOrderTypeBadgeClass(OrderType orderType) => orderType switch
    {
        OrderType.Retail => "bg-primary",
        OrderType.Refurb => "bg-success",
        OrderType.Service => "bg-warning",
        OrderType.SpecialOrder => "bg-info",
        _ => "bg-secondary"
    };
}
