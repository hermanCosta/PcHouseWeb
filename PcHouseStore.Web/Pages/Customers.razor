@page "/customers"
@using PcHouseStore.Domain.Models
@using PcHouseStore.Web.Services
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Customer Management</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Customer Management</h2>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <button class="btn btn-primary" @onclick="CreateNewCustomer">
                        <i class="oi oi-plus"></i> New Customer
                    </button>
                </div>
                <div class="d-flex gap-2">
                    <input type="text" class="form-control" placeholder="Search customers..." @bind="searchTerm"
                        @onkeypress="OnSearchKeyPress" style="width: 300px;" />
                    <button class="btn btn-outline-secondary" @onclick="SearchCustomers">
                        <i class="oi oi-magnifying-glass"></i> Search
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="LoadCustomers">
                        <i class="oi oi-reload"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (customers?.Any() == true)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Contact Number</th>
                                        <th>Email</th>
                                        <th>Company</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var customer in customers)
                                    {
                                        <tr>
                                            <td>@customer.CustomerId</td>
                                            <td>@(customer.Person?.FullName ?? "N/A")</td>
                                            <td>@(customer.Person?.ContactNo ?? "N/A")</td>
                                            <td>@(customer.Person?.Email ?? "N/A")</td>
                                            <td>@(customer.Company?.Name ?? "N/A")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => ViewCustomer(customer.CustomerId)">
                                                        <i class="oi oi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning"
                                                        @onclick="() => EditCustomer(customer.CustomerId)">
                                                        <i class="oi oi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger"
                                                        @onclick="() => DeleteCustomer(customer.CustomerId)">
                                                        <i class="oi oi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h4>No Customers Found</h4>
                    <p>There are no customers to display. Create your first customer to get started.</p>
                    <button class="btn btn-primary" @onclick="CreateNewCustomer">Create New Customer</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Customer>? customers;
    private bool isLoading = true;
    private string searchTerm = "";
    private long currentCompanyId = 1; // This should come from authentication context

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
    }

    private async Task LoadCustomers()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            customers = (await CustomerService.GetCustomersAsync(currentCompanyId))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customers: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchCustomers()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            await LoadCustomers();
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            customers = (await CustomerService.SearchCustomersAsync(currentCompanyId, searchTerm))?.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching customers: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchCustomers();
        }
    }

    private void CreateNewCustomer()
    {
        Navigation.NavigateTo("/customers/create");
    }

    private void ViewCustomer(long id)
    {
        Navigation.NavigateTo($"/customers/{id}");
    }

    private void EditCustomer(long id)
    {
        Navigation.NavigateTo($"/customers/{id}/edit");
    }

    private async Task DeleteCustomer(long id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", new object[] { "Are you sure you want to delete this customer?" }))
        {
            var success = await CustomerService.DeleteCustomerAsync(id);
            if (success)
            {
                await LoadCustomers();
            }
        }
    }
}