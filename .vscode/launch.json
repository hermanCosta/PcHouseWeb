{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/PcHouseStore.API/bin/Debug/net8.0/PcHouseStore.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PcHouseStore.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web",
            "program": "${workspaceFolder}/PcHouseStore.Web/bin/Debug/net8.0/PcHouseStore.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PcHouseStore.Web",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug API Only",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/PcHouseStore.API/bin/Debug/net8.0/PcHouseStore.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PcHouseStore.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to Process",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Launch Both Projects",
            "configurations": [
                "Debug API",
                "Debug Web"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Full Stack",
            "configurations": [
                "Debug API",
                "Debug Web"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Full Stack",
                "order": 1
            }
        }
    ]
}
